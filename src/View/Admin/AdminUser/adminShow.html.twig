{% extends "admin_layout.html.twig" %}

{% block content %}

    <div class="container">
        <h1>Informations utilisateur</h1>
        <div class="card user">
            <div class="card-header bg-warning userFirstname">
                {{ user.firstname }}

            </div>
            <div class="card-body">
                <p class="card-title userFirstname">Nom :  {{ user.firstname}}</p>
                <p class="card-text userLastname">Pr√©nom :  {{ user.lastname }}</p>
                <p class="card-text userEmail">Email :  {{ user.email }}</p>
                <p class="card-text userRegistered">Date d'inscription :  {{ user.registered }}</p>
                <p class="card-text userStatus">Status :  {{ user.status }}</p>

            </div>
        </div>


            <h1>Tous ces commentaires</h1>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Commentaire</th>
                    <th scope="col">Date</th>
                    <th scope="col">Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in comments %}

                    <tr>
                        <td>{{ comment.content }}</td>
                        <td>{{ comment.date }}</td>
                        <td>
                            <a href="/admin/comment/delete/{{ comment.id }}" target="">
                                <button type="submit" class="btn btn-warning">Supprimer</button></a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock content %}

