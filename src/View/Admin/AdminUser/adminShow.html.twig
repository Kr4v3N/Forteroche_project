{% extends "admin_layout.html.twig" %}

{% block content %}

    <div class="container-fluid">

        <h1 class="text-white">Informations utilisateur</h1>
        <div class="card user">
            <div class="card-header bg-warning">
                {{ user.firstname }}  {{ user.lastname }}
            </div>
            <div class="card-body">
                <p class="card-title">Nom :  {{ user.lastname}}</p>
                <p class="card-text ">Pr√©nom :  {{ user.firstname }}</p>
                <p class="card-text ">Email :  {{ user.email }}</p>
                <p class="card-text ">Date d'inscription :  {{ user.registered }}</p>
                <p class="card-text ">Status :  {{ user.status }}</p>

            </div>
        </div>

        <div class="col-md-12 text-right">
        <a href="/admin/user/delete/{{ user.id }}" target="" data-confirm="Etes-vous certain de vouloir supprimer ?">
            <button type="submit" class="btn btn-danger"><i class="far fa-trash-alt"></i></button></a>
        </div>

            {% if not comments %}
            <h1 class="text-white">Pas de commentaires</h1>
            {% else %}
            <h1 class="text-white">Tous ses commentaires</h1>
            {% endif %}

            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="text-white" scope="col">Commentaire(s)</th>
                    <th class="text-white" scope="col">Date</th>
                    <th class="text-white" scope="col">Supprimer</th>
                </tr>
                </thead>

                <tbody>
                {% for comment in comments %}
                    <tr>
                        <td class="text-white">{{ comment.content }}</td>
                        <td class="text-white">{{ comment.date("j F Y") }}</td>
                        <td>
                            <a href="/admin/comment/delete/{{ comment.id }}" target="" data-confirm="Etes-vous certain de vouloir supprimer ?">
                                <button type="submit" class="btn btn-danger"><i class="far fa-trash-alt"></i></button></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>

        </div>

    </div>

{% endblock content %}

