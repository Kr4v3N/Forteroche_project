
{% block content %}

    {% if connexionMessage %}

        <div id="alert" class="alert alert-success">
            <div>Bonjour {{ session.user.firstname | capitalize  }}</div>
            <a class="close" >x</a>
            <p>{{ connexionMessage }}</p>
        </div>

    {% endif %}

    {#------------------------------------------Carrousel-----------------------------------------------------------------#}
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/assets/images/dark-clouds-above-anchorage-alaska.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/assets/images/alaska-animal-baleen.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/assets/images/alaska4.jpg" alt="Third slide">
            </div>
        </div>
    </div>
    {#-------------------------------------------End Carrousel------------------------------------------------------------#}
