{% extends "layout.html.twig" %}

{% block content %}

    <div class="container">
        {% if session.user %}

            <div id="alert" class="alert alert-success">
                <a class="close" >x</a>
                <p>{{ session.user.message}}</p>
            </div>
        {% endif %}

        <h1>Billet simple pour l'Alaska</h1>

        <ul>
            {% for article in articles %}
                <div class="card article">
                    <div class="card-header bg-warning articleTitre">
                        {{ article.title }}
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <img class="imgArticle" src="/assets/images/{{ article.picture }}">
                        </div>
                        <div class="col-6 card-body">
                            <p class="card-text ">{{ article.content|truncate(200) }}</p>
                            <p class="card-title articleDate">{{ article.date }}</p>
                            <a href="/article/{{ article.id }}" target="">
                                <button type="submit" class="btn btn-warning">Lire la suite</button>
                            </a>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </ul>


    </div>

{% endblock content %}
