{% extends "admin_layout.html.twig" %}

{% block content %}

    <div class="container-fluid">

        <h1 class="text-white">Tous les commmentaires</h1>

        <table class="table table-striped text-white">

            <thead>
            <tr>
                <th scope="col">Titre de l'article</th>
                <th scope="col">Commentaire</th>
                <th scope="col">Utilisateur</th>
                <th scope="col">Date</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>

            <tbody>

            {% for content in comments %}
                <tr>
                    <td>{{ content.title }} </td>

                    <td data-toggle="tooltip" data-placement="top" title="{{ content.content }}">
                        {{ content.content|truncate(200) }}
                    </td>

                    <td> {{ content.lastname}} </td>

                    <td> {{ content.date }} </td>

                    <td> <a href="/admin/comment/delete/{{ content.id }}" target="" data-confirm="Etes-vous certain de vouloir supprimer?">

                            <button type="submit" class="btn btn-danger"><i class="far fa-trash-alt"></i></button></a> </td>
                </tr>
            {% endfor %}

            </tbody>

        </table>
    </div>

{% endblock content %}
