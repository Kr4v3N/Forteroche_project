{% extends "admin_layout.html.twig" %}

{% block content %}

    <div class="container">
        <h1 class="text-white">Tous les billets</h1>

        <table class="table table-striped text-white">
            <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Contenu</th>
                <th scope="col">Voir</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}

                <tr>
                    <th scope="row">{{ article.title }}</th>
                    <td>{{ article.content|truncate(200) }}</td>
                    <td>
                        <a href="/article/{{ article.id }}" target="">
                            <button type="submit" class="btn btn-warning"><i class="far fa-eye"></i></button></a>
                    </td>

                    <td>
                        <a href="/admin/article/edit/{{ article.id }}" target="">
                            <button type="submit" class="btn btn-warning"><i class="far fa-edit"></i></button></a>
                    </td>

                    <td>
                        <a href="/admin/article/delete/{{ article.id }}" target="">
                            <button type="submit" class="btn btn-danger"><i class="far fa-trash-alt"></i></button></a>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}



