
{% block content %}

    <div id="carouselExampleControls" class="carousel slide carouselhaut  " data-ride="carousel">

        {% if connexionMessage %}

            <div id="alert" class="alert alert-success">
                <a class="close" >x</a>
                <p>{{ connexionMessage }}</p>
            </div>

        {% endif %}

    {#------------------------------------------Carrousel-----------------------------------------------------------------#}
            <div class="carousel-inner text-center ">
            <div class="carousel-item active ">
                <img class=" d-block w-100" src="/assets/images/caroussel11.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class=" d-block w-100" src="/assets/images/caroussel22.jpeg" alt="Second slide">
            </div>
            <div class="carousel-item ">
                <img class=" d-block w-100" src="/assets/images/caroussel33.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    {#-------------------------------------------End Carrousel------------------------------------------------------------#}


{% endblock %}
