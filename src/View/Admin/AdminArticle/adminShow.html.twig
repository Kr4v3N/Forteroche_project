{% extends "admin_layout.html.twig" %}

{% block content %}

    <div class="container">

        <h1>Modifier chapitre</h1>

        <div class="card article">
            <div class="card-header bg-warning articleTitre">
                {{ article.title }}
            </div>

            <div class="card-body">
                <p class="card-title articleDate">{{ article.date}}</p>
                <p class="card-text articleContenu">{{ article.content }}</p>
            </div>

        </div>

    </div>

{% endblock content %}



