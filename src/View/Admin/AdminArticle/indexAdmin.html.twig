{% extends "admin_layout.html.twig" %}

{% block content %}

    <div class="container">
        <h1>Tous les chapitres</h1>

        <ul>
            {% for article in articles %}
                <div class="card article">
                    <div class="card-header bg-warning articleTitre">
                        {{ article.title }}
                    </div>
                    <div class="card-body">
                        <p class="card-title articleDate">{{ article.date }}</p>
                        <p class="card-text articleContenuList">{{ article.content }}</p>
                        <a href="/admin/article/{{ article.id }}" target="">
                            <button type="submit" class="btn btn-warning">Modifier</button></a>
                        <a href="" target="">
                            <button type="submit" class="btn btn-warning">Supprimer</button></a>
                    </div>
                </div>

            {% endfor %}
        </ul>


    </div>

{% endblock content %}
